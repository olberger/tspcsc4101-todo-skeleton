
{% extends 'baselayout.html.twig' %}

{% block title %}Todo {{todo.id}}{% endblock %}

{% block main %}
    <h1>Todo</h1>
	{#
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ todo.id }}</td>
            </tr>
            <tr>
                <th>Todo</th>
                <td>{{ todo.title }}</td>
            </tr>
            <tr>
                <th>Completed</th>
                <td>{{ todo.completed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ todo.created ? todo.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ todo.updated ? todo.updated|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    #}
    <div class="form-horizontal">
    
    	<div class="form-group row">
    		<label class="col-sm-2 col-form-label">Id</label>
    		<div class="col-sm-10">
    		    <div class="form-control form-control-plaintext">{{ todo.id }}</div>
    		</div>
    	</div>
    	
    	<div class="form-group row">
    		<label class="col-sm-2 col-form-label-lg">Libellé</label>
    		<div class="col-sm-10">
    		    <div class="form-control form-control-plaintext form-control-lg">{{ todo.title }}</div>
    		</div>
    	</div>
    	
    	<div class="form-group row">
    		<label class="col-sm-2 col-form-label">Terminé</label>
    		<div class="col-sm-10">
    		    <div class="form-control form-control-plaintext">{{ todo.completed ? "oui" : "non" }}</div>
    		</div>
    	</div>
    	
    	<div class="form-group row">
    		<label class="col-sm-2 col-form-label">Created</label>
    		<div class="col-sm-10">
    		    <div class="form-control form-control-plaintext">{{ todo.created ? todo.created|date('Y-m-d H:i:s') : '' }}</div>
    		</div>
    	</div>
    	
    	<div class="form-group row">
    		<label class="col-sm-2 col-form-label">Updated</label>
    		<div class="col-sm-10">
    		    <div class="form-control form-control-plaintext">{{ todo.updated ? todo.updated|date('Y-m-d H:i:s') : '' }}</div>
    		</div>
    	</div>
    
    </div><!-- form-horizontal </form>  --> 

    <a href="{{ path('todo_edit', {'id': todo.id}) }}"><button class="btn btn-lg btn-warning">Edit</button></a>

    {{ include('todo/_delete_form.html.twig') }}

    <a href="{{ path('todo_index') }}"><button class="btn btn-lg btn-primary">Back to list</button></a>
    
{% endblock %}
