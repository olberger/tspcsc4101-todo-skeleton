
{% extends 'baselayout.html.twig' %}

{% block title %}Todo index{% endblock %}

{% block main %}
    <h1>Todo index</h1>
    <table class="table table-sm">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Completed</th>
                <th>Created</th>
                <th>Updated</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for todo in todos %}
            <tr>
                <td>{{ todo.id }}</td>
                <td>
           {% if todo.completed %}
            <del>
            {% endif %}
            {{ todo.title }}
            {% if todo.completed %}
            </del>
            {% endif %}
</td>
                <td>{{ todo.completed }}</td>
                <td>{{ todo.created ? todo.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ todo.updated ? todo.updated|date('Y-m-d H:i:s') : '' }}</td>

                <td><a href="{{ path('todo_show', {'id': todo.id}) }}"><button class="btn btn-lg btn-primary">Show</button></a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
