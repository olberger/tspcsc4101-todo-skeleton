{% extends 'baselayout.html.twig' %}

{% block title %}Paste index{% endblock %}

{% block main %}
    <h1>Paste index</h1>

    <table class="table table-sm">
        <thead class="thead-light">
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Created</th>
                <th>Content_type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for paste in pastes %}
            <tr>
                <td>{{ paste.id }}</td>
                <td>{{ paste.content }}</td>
                <td>{{ paste.created ? paste.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ paste.contentType }}</td>
                <td>
                    <a href="{{ path('paste_show', {'id': paste.id}) }}"><button class="btn btn-lg btn-primary">Show</button></a>
                    {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('paste_edit', {'id': paste.id}) }}"><button class="btn btn-lg btn-warning">Edit</button></a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
   {% if is_granted('ROLE_USER') %}
    <a href="{{ path('paste_new') }}"><button class="btn btn-lg btn-primary">Create new</button></a>
   {% endif %}
    
{% endblock %}
