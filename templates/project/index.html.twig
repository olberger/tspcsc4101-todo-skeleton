{% extends 'baselayout.html.twig' %}

{% block title %}Project index{% endblock %}

{% block main %}
    <h1>Project index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.title }}</td>
                <td>{{ project.description }}</td>
                <td>
                    <a href="{{ path('project_show', {'id': project.id}) }}"><button class="btn btn-lg btn-primary">Show</button></a>
                    {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('project_edit', {'id': project.id}) }}"><button class="btn btn-lg btn-warning">Edit</button></a>
                    {% endif %}
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_USER') %}
    <a href="{{ path('project_new') }}"><button class="btn btn-lg btn-primary">Create new</button></a>
    {% endif %}
    
{% endblock %} {# main #}
